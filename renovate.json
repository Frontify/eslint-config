{
    "$schema": "http://docs.renovatebot.com/renovate-schema.json",
    "dependencyDashboard": false,
    "extends": ["config:base", "schedule:monthly", "group:allNonMajor"],
    "labels": ["dependencies"],
    "packageRules": [
        {
            "labels": ["dependencies", "dependencies-major"],
            "updateTypes": ["major"]
        }
    ],
    "rangeStrategy": "bump",
    "timezone": "Europe/Zurich",
    "vulnerabilityAlerts": {
        "labels": ["security"]
    }
}
